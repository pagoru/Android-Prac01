<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="Hola"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.pagoru.holamundo.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <EditText
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_x="100dp"
        android:layout_y="20dp"
        android:id="@+id/input_nom" />

    <TextView
        android:text="Nom"
        android:layout_width="82dp"
        android:layout_height="52dp"
        android:layout_x="10dp"
        android:layout_y="30dp"
        android:id="@+id/text_nom" />

    <EditText
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_x="100dp"
        android:layout_y="80dp"
        android:id="@+id/input_cognom" />

    <TextView
        android:text="Cognom"
        android:layout_width="82dp"
        android:layout_height="52dp"
        android:layout_x="10dp"
        android:layout_y="90dp"
        android:id="@+id/text_cognom" />

    <EditText
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_x="100dp"
        android:layout_y="140dp"
        android:id="@+id/input_edat" />

    <TextView
        android:text="Edat"
        android:layout_width="82dp"
        android:layout_height="52dp"
        android:layout_x="10dp"
        android:layout_y="150dp"
        android:id="@+id/text_edat" />

    <CheckBox
        android:text="Permet publicar les dades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="260dp"
        android:id="@+id/checkBox_dades" />

    <Button
        android:text="Canviar pantalla"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="200dp"
        android:id="@+id/button_segona" />

</AbsoluteLayout>
